public class Player
{
    int win;
    int loss;
    String name;
    int age;
    
    public Player(String name, int age){
        this.win = 0;
        this.loss = 0;
        this.name = name;
    }
    
    public String returnName(){
        return this.name;
    }
    
    public int returnWin(){
        return this.win;
    }
    
    public int returnLoss(){
        return this.loss;
    }
    
    public int returnGrade(){
        return this.win/(this.loss + this.win) * 100;
        
         public void addWin(){
        this.win += 1;
    }
    
    public void addLoss(){
        this.loss += 1;
    }
}
